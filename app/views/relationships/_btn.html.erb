<% if user.id != current_user.id %>
  <% if current_user.following?(user) %>
    <%= link_to 'Unfollow', user_relationships_path(user.id), method: :delete, remote: true, class: "btn btn-sm btn-info" %>
  <% else %>
    <%= link_to 'Follow', user_relationships_path(user.id), method: :post, remote: true, class: "btn btn-sm btn-success" %>
  <% end %>
<% end %>